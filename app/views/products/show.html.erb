<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Content:</b>
  <%= @product.content %>
</p>

<%= link_to "New Howtolist", new_product_howtolist_path(@product) %>

<ul id='howtolists'>
  <% @product.howtolists.each do |howtolist| %>
    <li>
      #<%= howtolist.id %> -
      <%= link_to howtolist.title, [@product, howtolist] %>
    </li>
  <% end %>
</ul>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
